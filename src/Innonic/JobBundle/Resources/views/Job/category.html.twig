{% extends "::base.html.twig" %}
{% block body %}
    <div id="jobs">
        <div class="category_programming">
            <div class="category">
                <h1>
                    <a href="category.html">Programming</a>
                </h1>
            </div>
            <table class="jobs">
                <tbody>
                {% for job in jobsInCategory %}
                    <tr class="{{ cycle(['odd', 'even'], loop.index0) }}">
                        <td class="location">
                            {{ job.location }}
                        </td>
                        <td class="position">
                            <a href="{{ path('innonic_job_job_show', {slug: job.slug}) }}">{{ job.position }}</a>
                        </td>
                        <td class="company">
                            {{ job.company }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}