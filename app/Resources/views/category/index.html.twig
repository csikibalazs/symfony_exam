{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categories list</h1>
    <a href="{{ path('innonic_job_category_new') }}">new</a>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('innonic_job_category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.category }}</td>
                <td>{{ category.slug }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('innonic_job_category_show', { 'id': category.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('innonic_job_category_edit', { 'id': category.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
